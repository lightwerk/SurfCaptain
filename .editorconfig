# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.less]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.sql]
indent_style = tab
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
